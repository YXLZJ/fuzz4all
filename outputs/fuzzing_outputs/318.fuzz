#include <iostream>
#include <string>
using namespace std;

int main() {
    auto userInput = string{};
    cout << "Enter a word: "; cin >> userInput;
    
    // Using C++17 structured binding to unpack the tuple returned by make_tuple
    auto [first, second] = make_tuple(userInput[0], userInput.substr(1));
    
    cout << "First character: " << first << ", Second part of word: " << second << endl;
    
    return 0;
}