#include <iostream>
#include <vector>
#include <algorithm>

int main() {
    std::vector<std::pair<char, int>> v = {{'a', 1}, {'b', 2}, {'c', 3}};
    
    auto sort_by_second = [](const std::pair<char, int>& a, const std::pair<char, int>& b) { return a.second < b.second; };
    std::sort(v.begin(), v.end(), sort_ by_second);
    
    for (auto& p : v) {
        std::cout << p.first << ": " << p.second << '\n';
    }
    
    return 0;
}