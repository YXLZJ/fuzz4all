#include <iostream>
#include <string_view>

int main() {
    std::string input = "";
    std::cout << "Enter a string: ";
    getline(std::cin, input);

    std::string_view sv{input};
    std::cout << "String length: " << sv.size() << '\n';
    std::cout << "Substring from index 2 to end: '" << sv.substr(2) << "'\n";
    return 0;
}