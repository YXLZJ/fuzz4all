#include <iostream>
#include <string>
using namespace std;

int main() {
    string input = "Enter a message:";
    cout << input << endl;

    string output;
    cin >> output;

    auto reverse_output = [](const string& s) -> string {
        return string(s.rbegin(), s.rend());
    };

    cout << "Reversed message: " << reverse_output(output) << endl;

    return 0;
}