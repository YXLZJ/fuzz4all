#include <iostream>
#include <string>

int main() {
    std::string input = "";
    std::cout << "Enter a string: ";
    getline(std::cin, input);
    
    auto reversed_input = input;
    std::reverse(reversed_input.begin(), reversed_input.end());
    
    std::cout << "Reversed string: " << reversed_input << std::endl;
    
    return 0;
}