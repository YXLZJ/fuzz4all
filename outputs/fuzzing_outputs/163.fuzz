#include <iostream>
#include <string>

int main() {
    std::string input;
    std::cout << "Enter a string: ";
    getline(std::cin, input);

    // Using C++17 structured binding to unpack the result of std::make_tuple
    auto [firstChar, restOfString] = std::make_tuple(input[0], input.substr(1));

    std::cout << "First character: " << firstChar << "\n";
    std::cout << "Rest of string: " << restOfString << "\n";

    return 0;
}