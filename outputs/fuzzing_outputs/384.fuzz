#include <iostream>
#include <string>
#include <vector>
#include <algorithm>
using namespace std;

int main() {
    vector<pair<string, int>> data = {{"apple", 5}, {"banana", 3}, {"orange", 7}};
    
    auto sort_by_second = [](const pair<string, int>& a, const pair<string, int>& b) { return a.second < b.second; };
    sort(data.begin(), data.end(), sort_ by_second);
    
    for (const auto& item : data) {
        cout << item.first << ": " << item.second << endl;
    }
    
    return 0;
}