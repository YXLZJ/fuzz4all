#include <iostream>
#include <vector>
#include <algorithm>

int main() {
    std::string input;
    std::cout << "Enter a string: ";
    std::cin >> input;
    
    std::sort(input.begin(), input.end());
    std::reverse(input.begin(), input.end());
    
    std::cout << "Sorted and reversed string: " << input << std::endl;
    
    return 0;
}