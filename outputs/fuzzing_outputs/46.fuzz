#include <iostream>
#include <vector>
#include <algorithm>

int main() {
    std::vector<std::pair<char, int>> vec = {{'a', 3}, {'b', 2}};
    
    auto it = std::min_element(vec.begin(), vec.end(), [](const auto& a, const auto& b) { return a.second < b.second; });
    if (it != vec.end()) {
        std::cout << "Minimum value: " << it->first << ", Count: " << it->second << '\n';
    } else {
        std::cout << "Vector is empty.\n";
    }
    
    return 0;
}