#include <iostream>
#include <string>
#include <regex>
using namespace std;

int main() {
    string input = "Hello World!";
    regex pattern("\\b[A-Za-z]+\\b"); // Matches words with letters only.
    smatch matches;

    if (regex_search(input, matches, pattern)) {
        for (const auto& match : matches) {
            cout << "Found word: " << match << endl;
        }
    } else {
        cout << "No words found." << endl;
    }

    return 0;
}